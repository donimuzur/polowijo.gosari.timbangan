<UserControl x:Class="polowijo.gosari.timbangan.UI.HOME.Home_Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:polowijo.gosari.timbangan.UI.HOME"
            mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="780" Loaded="On_Load">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="1">
            <Button x:Name="Btn_SlipTimbangan" Height="Auto" Margin="50" Background="#FF245E97" Click="Btn_SlipTimbangan_Click">
                <StackPanel>
                    <Image Source="/Resources/Image/kg.png" MaxHeight="100" MaxWidth="100"></Image>
                    <Label FontFamily="Arial" Foreground="white" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center">Slip Timbangan (F3)</Label>
                </StackPanel>
            </Button>
        </DockPanel>
        <DockPanel Grid.Row="0" Grid.Column="0">
            <Button x:Name="Btn_Pengiriman" Height="Auto" Margin="50" Background="#FF245E97" Click="Btn_Pengiriman_Click">
                <StackPanel>
                    <Image Source="/Resources/Image/item.png" MaxHeight="100" MaxWidth="100"></Image>
                    <TextBlock FontFamily="Arial" Foreground="White" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center">Pengiriman (F2)</TextBlock>
                </StackPanel>
            </Button>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="0">
            <!--<Button x:Name="Btn_Master_Supplier" Height="Auto" Margin="50" Background="#FF245E97" Click="Btn_Master_Supplier_Click">
                <StackPanel>
                    <Image Source="/Resources/Image/Supplier.png" MaxHeight="100" MaxWidth="100"></Image>
                    <TextBlock FontFamily="Arial" Foreground="white" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center">Supplier</TextBlock>
                </StackPanel>
            </Button>-->
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="1">
            <!--<Button x:Name="Btn_Master_Transport" Height="Auto" Margin="50" Background="#FF245E97" Click="Btn_Master_Transport_Click">
                <StackPanel>
                    <Image Source="/Resources/Image/Truck.png" MaxHeight="100" MaxWidth="100"></Image>
                    <TextBlock FontFamily="Arial" Foreground="white" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center">Transport</TextBlock>
                </StackPanel>
            </Button>-->
        </DockPanel>
    </Grid>
</UserControl>
